{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "outDir": "./dist",
    "rootDir": "..",                       // ✅ From "src" → ".."
    "strict": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "moduleResolution": "node"
  },
  "include": [
    "src", 
    "../contracts/typechain-types"        // ✅ Include TypeChain outputs
  ],
  "exclude": ["node_modules"]
}
